<div class="container">
  <div class="row">
    <div class="col-md-12">

<div class="dropdown clearfix pull-right">
    <button class="btn btn-default dropdown-toggle addnewjob" type="button" id="dropdownMenuDivider" data-toggle="dropdown" aria-haspopup="true" aria-expanded="true">
      排序
        <span class="caret"></span>
    </button>
    <ul class="dropdown-menu" aria-labelledby="dropdownMenuDivider">
        <li>
          <%= link_to("按照薪資下限排序", jobs_path(:order => "by_lower_bound")) %>
        </li>
        <li>
            <%= link_to("按照薪資上限排序", jobs_path(:order => "by_upper_bound")) %>

        </li>
        <li>
          <%= link_to("按照刊登時間排序", jobs_path ) %>

        </li>
    </ul>
</div>




    <table class="table table-boldered table-striped custab">

      <thead>
        <tr>
            <td>職缺</td>
            <td>薪資下限</td>
            <td>薪資上限</td>
            <td>刊登時間</td>
        </tr>
      </thead>

        <% @jobs.each do |job| %>

        <tr>
          <td>
            <%= link_to(job.title, job_path(job)) %>
          </td>
          <td> <%= job.wage_lower_bound %></td>
          <td> <%= job.wage_upper_bound %></td>
          <td> <%= job.created_at %> </td>

        </tr>
        <% end %>

      </table>

</div>
</div>
</div>
