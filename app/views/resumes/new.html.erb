<div class="col-md-12">
  <div class="row showbox">
    <div class="col-md-6 col-md-offset-3 showbox-inner">
      <div class="col-md-10 col-md-offset-1">

          <h3> 投交履歷到 <%= @job.title %> </h3>

          <hr>

          <%= simple_form_for [@job, @resume] do |f| %>
            <%= f.input :content %>
            <%= f.input :attachment %>

            <%= f.submit "送出" %>
          <% end %>

      </div>
    </div>
  </div>
</div>
