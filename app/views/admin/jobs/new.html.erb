<br></br>
<div class="col-md-10 col-centered">

  <div class="panel panel-default">
    <div class="panel-heading">
      <h3 class="panel-title"><h1> Add a job </h1></h3>
    </div>
    <div class="panel-body">
      <%= simple_form_for [:admin, @job] do |f| %>

      <%= f.input :title %>
      <%= f.input :description %>
      <%= f.input :wage_lower_bound, :label => "薪資下限" %>
      <%= f.input :wage_upper_bound, :label => "薪資上限" %>
      <%= f.input :contact_email %>
      <%= f.input :is_hidden %>

        <%= f.submit "Submit", class: 'btn btn-danger'  %>

      <% end %>
    </div>
  </div>

</div>
